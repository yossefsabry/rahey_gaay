    <string name="info_company_key_2">Verified profiles and transparent ratings.</string>
    <string name="info_company_key_3">In-app chat keeps delivery details clear.</string>
    <string name="info_company_next_1">Review our safety standards and policies.</string>
    <string name="info_company_next_2">Contact us for partnerships or support.</string>

    <string name="info_about_intro">Rahey Gaay is a peer-to-peer delivery network powered by trusted travelers.</string>
    <string name="info_about_key_1">Designed around real travel schedules.</string>
    <string name="info_about_key_2">Clear pricing and flexible delivery options.</string>
    <string name="info_about_key_3">Community trust through verification and reviews.</string>
    <string name="info_about_next_1">Search the map to find travelers.</string>
